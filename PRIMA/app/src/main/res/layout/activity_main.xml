<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.okdevtv.fileupload"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#58FAF4" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:onClick="onClick"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
             />

        <Button
            android:id="@+id/cancleButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:layout_alignTop="@id/imageButton1"
            android:layout_alignLeft="@id/imageButton1"
            android:layout_marginTop="-6dp"
            android:onClick="onClick"
            android:layout_marginLeft="-4dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:inputType="textPersonName"
            android:text="Plate Recognition"
            android:layout_toEndOf="@+id/imageButton1"
            android:layout_toRightOf="@id/imageButton1"/>

        <EditText
            android:id="@+id/plateNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text"
            android:text="12 ê°€ 3456"
            android:layout_toEndOf="@+id/imageButton1"
            android:layout_toRightOf="@id/imageButton1"/>

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageButton1"
            android:text="Date:" />

        <TextView
            android:id="@+id/Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/Date"
            android:layout_toRightOf="@id/Date"
            android:layout_below="@id/Date"
            android:layout_marginTop="-17dp"
            android:text="2017-07-18 16:00:00" />

        <EditText
            android:id="@+id/Text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Item List" />

        <Button
            android:id="@+id/posting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plateNumber"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="100dp"
            android:onClick="onClick"
            android:text="Posting" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_below="@id/RL1"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:layout_margin="5dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_below="@id/RL1"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/imageButton2"
        android:layout_toRightOf="@id/imageButton2"
        android:scaleType="fitXY"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:layout_below="@id/imageButton2"
        android:scaleType="fitXY"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_below="@id/imageButton3"
        android:layout_toEndOf="@id/imageButton4"
        android:layout_toRightOf="@id/imageButton4"
        android:layout_alignBottom="@id/imageButton4"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/cancleButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:layout_alignTop="@id/imageButton2"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="2dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/cancleButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:layout_alignTop="@id/imageButton3"
        android:layout_alignLeft="@id/imageButton3"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="-4dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/cancleButton4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:layout_alignTop="@id/imageButton4"
        android:layout_alignLeft="@id/imageButton4"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="-4dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/cancleButton5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:layout_alignTop="@id/imageButton5"
        android:layout_alignLeft="@id/imageButton5"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="-4dp"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignLeft="@id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3"
        android:layout_alignRight="@id/imageButton3"/>

    <TextView
        android:id="@+id/script"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageButton5"
        />

</RelativeLayout>